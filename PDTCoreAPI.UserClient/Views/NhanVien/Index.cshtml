@model PDTCoreAPI.UserClient.Models.NhanVienModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/customJS/nhanvien.js"></script>
</head>
<body>
    <div class="container">
        <h2>Quản lý thông tin nhân viên (CRUD)</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="preAddNew();">Thêm nhân viên</button><br /><br />
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Mã nhân viên
                    </th>
                    <th>
                        Họ Tên
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Phòng ban
                    </th>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Thêm Nhân viên</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="ID">ID</label>
                            <input type="text" class="form-control" id="ID" placeholder="Id" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="MaNhanVien">Mã Nhân viên</label>
                            <input type="text" class="form-control" id="MaNhanVien" placeholder="Nhập mã nhân viên" />
                            <span class="field-validation-valid text-danger" id="MaMessage"> </span>
                        </div>
                        <div class="form-group">
                            <label for="HoTenNhanVien">Họ Tên</label>
                            <input type="text" class="form-control" id="HoTenNhanVien" placeholder="Nhập họ tên" />
                            <span class="field-validation-valid text-danger" id="TenMessage"> </span>
                        </div>
                        <div class="form-group">
                            <label for="DiaChi">Địa chỉ</label>
                            <input type="text" class="form-control" id="DiaChi" placeholder="Nhập địa chỉ" />
                            <span class="field-validation-valid text-danger" id="DCMessage"> </span>
                        </div>
                        <div class="form-group">
                            <label for="PhongBan">Phòng ban</label>
                            <input type="text" class="form-control" id="PhongBan" placeholder="Nhập phòng ban" />
                            <span class="field-validation-valid text-danger" id="PBMessage"> </span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
